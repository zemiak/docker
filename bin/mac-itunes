#!/bin/sh
set -e

### BEGIN INIT INFO
# Provides:           docker
# Required-Start:     $syslog $remote_fs
# Required-Stop:      $syslog $remote_fs
# Default-Start:      2 3 4 5
# Default-Stop:       0 1 6
# Short-Description:  A virtual Mac machine running iTunes
### END INIT INFO

. /lib/lsb/init-functions

DESC="Mac for iTunes"

fail_unless_root() {
        if [ "$(id -u)" != '0' ]; then
                log_failure_msg "$DESC must be run as root"
                exit 1
        fi
}

case "$1" in
        start)
                fail_unless_root
                log_begin_msg "Starting $DESC"
                VBoxManage startvm MacServer --type headless
                log_end_msg $?
                ;;

        stop)
                fail_unless_root
                log_begin_msg "Stopping $DESC"
                VBoxManage controlvm MacServer acpipowerbutton
                log_end_msg $?
                ;;

        restart)
                $0 stop
                $0 start
                ;;

        force-reload)
                $0 restart
                ;;

        status)
                ping -W 1 -c 1 mac-server.local >/dev/null 2>/dev/null && log_success_msg "$DESC is running" || log_failure_msg "$DESC is not running"
                ;;

        *)
                echo "Usage: $0 {start|stop|restart|status}"
                exit 1
                ;;
esac
